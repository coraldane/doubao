#!/bin/bash

WORKSPACE=$(cd $(dirname $0)/; pwd)
cd $WORKSPACE

conf_file=$2
app=doubao
version=1.0.0

mkdir -p data logs

pidfile=data/$conf_file.pid
logfile=logs/$conf_file.log

function check_pid() {
    if [ -f $pidfile ];then
        pid=`cat $pidfile`
        if [ -n $pid ]; then
            running=`ps -p $pid|grep -v "PID TTY" |wc -l`
            return $running
        fi
    fi
    return 0
}

function start() {
    check_pid
    running=$?
    if [ $running -gt 0 ];then
        echo -n "$app now is running already, pid="
        cat $pidfile
        return 1
    fi
    java -Dlog4j.configuration=file://${WORKSPACE}/conf/log4j.xml -jar doubao-1.0.0-standalone.jar conf/$conf_file.json &> $logfile &
    echo $! > $pidfile
    echo "$app started..."
}

function stop() {
    pid=`cat $pidfile`
    kill $pid
    echo "$app stoped..."
}

function restart() {
    stop
    wait
    start
}

function status() {
    check_pid
    running=$?
    if [ $running -gt 0 ];then
        echo started
    else
        echo stoped
    fi
}

function tailf() {
    tail -f $logfile
}

function pack() {
    cd target
    mkdir -p $app-releases
    cp -r $app-$version-standalone.jar ../conf ../control $app-releases/
    file_list="$app-releases"
    echo "...tar $app-$version.tar.gz <= $file_list"
    tar zcvf $app-$version.tar.gz $file_list
    rm -rf $app-releases
}

function help() {
    echo "USAGE: $0 [1]:start|stop|restart|status|tail"
    echo "[2]:  config file name under conf folder   e.g.: $1 taisan"
}

if [ $# != 2 ] ; then
    help
elif [ "$1" == "stop" ];then
    stop
elif [ "$1" == "start" ];then
    start
elif [ "$1" == "restart" ];then
    restart
elif [ "$1" == "status" ];then
    status
elif [ "$1" == "pack" ];then
    pack
elif [ "$1" == "tail" ];then
    tailf
else
    help
fi
